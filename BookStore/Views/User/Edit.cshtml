@using BookStore.Models
@using BookStore.Data.Enums

@model User
<div class="navbar-container">
</div>
<div class="main-container">
    <section class="space-sm">
        <div class="container">
            <div class="row mb-5">
                <!--end of col-->
            </div>
            <!--end of row-->
            <div class="row flex-md-row card card-md">
                <div class="card-body bg-secondary">
                    <div class="row justify-content-center">
                        <div class="col-6 col-lg-5">
                            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                                <input type="hidden" id="userId" name="userId" value="@Model.Id" />
                                <input type="hidden" id="userId" name="Password" value="@Model.Password" />
                                <div class="form-row form-group">
                                    <div class="col">
                                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter name" value="@Model.Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <select asp-for="UserStatus" asp-items="@Html.GetEnumSelectList<UserStatus>()" class="form-control" onselect="@Model.UserStatus">
                                            <option>--Select-- </option>
                                        </select>
                                        <span asp-validation-for="UserStatus" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <button class="btn btn-block btn-success btn-lg" type="submit">Save Changes</button>
                                    </div>
                                </div>
                            </form>
                            <a  type="button"
                                class="btn btn-sm btn-outline-danger"
                                asp-action="Delete" 
                                asp-route-id="@Model.Id">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
</div>